<control>
   <adaptors>
      <adaptor>
         <key>HullQuality</key>
         <paras>
            <para>
               <!-- note: global maximum mesh size -->
               <key>maxsize</key>
               <!-- range: >0.0 -->
               <val>30</val>
            </para>
            <para>
               <!-- note: global minimum mesh size -->
               <key>minsize</key>
               <!-- range: >0.0 -->
               <val>0.0</val>
            </para>
            <para>
               <!-- note: global maximum angle  -->
               <key>maxangle</key>
               <!-- range: 150-180 -->
               <val>175</val>
            </para>            
            <para>
               <!-- note: fineness transition -->
               <key>grading</key>
               <!-- range: 0.0-1.0 -->
               <val>0.3</val>
            </para>            
         </paras>
      </adaptor>
   </adaptors>
</control>
