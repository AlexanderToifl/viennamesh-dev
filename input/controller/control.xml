<control>
   <adaptors>
      <adaptor>
         <key>HullQuality</key>
         <paras>
            <para>
               <!-- note: global maximum mesh size -->
               <!-- desc: the largest allowed mesh element size -->               
               <key>maxsize</key>
               <!-- range: maxsize > 0.0 -->
               <val>1.0E10</val>
            </para>
            <para>
               <!-- note: global minimum mesh size -->
               <!-- desc: the smalles allowed mesh element size -->                              
               <key>minsize</key>
               <!-- range: minsize >= 0.0 -->
               <val>0.0</val>
            </para>
            <para>
               <!-- note: surface curvature partitioning factor -->
               <!-- desc: the larger the factor, the more accurate 
                    is the curvature  -->                              
               <key>curvfac</key>
               <!-- range: curvfac >= 0.0 -->
               <val>0</val>
            </para>            
            <para>
               <!-- note: global maximum angle  -->
               <!-- desc: the largest allowed angle in a mesh element -->                              
               <key>maxangle</key>
               <!-- range: 150 <= maxangle <= 180 -->
               <val>175</val>
            </para>            
            <para>
               <!-- note: rate of growth of size between elements -->
               <!-- desc: the larger the factor, the quicker the transition 
                    between smaller and larger elements -->                              
               <key>grading</key>
               <!-- range: 0.0 < grading <= 1.0 -->
               <val>0.3</val>
            </para>            
         </paras>
      </adaptor>
   </adaptors>
</control>
