#
# Machine dependent make include file
# 
#
# CC=/opt/gcc-dev/bin/gcc 
# CC=/usr/local/bin/gcc
CC=gcc
# CC=/opt/gcc42/bin/gcc 
CPLUSPLUS=$(CC)
AR=ar
LINK=$(CC)
MAKE=make
RM=rm
RANLIB=ranlib
#
# Machine dependent flags:
#
CFLAGS2 =

MPIINCDIR=/usr/include
MPILIBDIR=/usr/lib
METISDIR=/usr/local/metis-4.0/

CPLUSPLUSFLAGS2 = -O2 -w -I/usr/include/GL3.5 -DLINUX -DOPENGL \
	-ftemplate-depth-99 -finline-limit=10000 \
	-Wdisabled-optimization  -funroll-loops  -DPARALLEL -DMETIS \
	-I$(MPIINCDIR) \
	-I$(METISDIR)/Lib \
#	-DNGSOLVE \

LINKFLAGS2 =   -L/usr/openwin/lib -L/usr/X11R6/lib -L/usr/lib/GL3.5
SYSLIB2 = -L$(METISDIR) -lmetis \
	-L$(MPILIBDIR) -lmpich \
	-lstdc++
#	/opt/gcc42/lib/libstdc++.a  
# /usr/lib/libgfortran.a



goalngs=goalngs
